<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.DetailFragment">

    <ImageView
        android:id="@+id/image_item_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/dp20"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"/>
    <TextView
        android:id="@+id/txt_title_detail"
        app:layout_constraintTop_toTopOf="@id/image_item_detail"
        app:layout_constraintStart_toEndOf="@id/image_item_detail"
        android:textSize="@dimen/dp20"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_description_detail"
      app:layout_constraintStart_toStartOf="@id/image_item_detail"
        app:layout_constraintTop_toBottomOf="@id/image_item_detail"
        android:textSize="@dimen/dp20"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>